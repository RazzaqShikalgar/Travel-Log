<!DOCTYPE html>
<html>
  <head>
    <title>Posts Liked by User</title>
    <style>
      /* Set global styles */
      body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 0;
      }

      /* Define styles for the centered container */
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
      }

      /* Define styles for the post list */
      .post-list {
        list-style: none;
        padding: 0;
      }

      /* Define styles for each post item */
      .post-item {
        display: flex;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        padding: 10px;
      }

      /* Define styles for the post image */
      .post-image {
        width: 100px;
        height: 100px;
        margin-right: 10px;
      }

      /* Define styles for the post title and author */
      .post-details {
        flex-grow: 1;
      }

      /* Define styles for the post title */
      .post-title {
        font-size: 18px;
        font-weight: bold;
        margin: 0;
        color: #333;
      }

      /* Define styles for the post author */
      .post-author {
        font-size: 14px;
        color: #666;
        margin: 5px 0;
      }

      /* Define styles for the post date */
      .post-date {
        font-size: 12px;
        color: #999;
        margin: 5px 0;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Posts Liked by User</h1>
      <ul class="post-list">
        <% if(likes != '')%>
          
          <% likedata.forEach(function(likedata,index) { %>
            <li class="post-item">
              <img class="post-image" src="<%= likedata.Image %>" alt="">
              <div class="post-details">
                <h2 class="post-title"><%= likedata.Title %></h2>
                <p class="post-author">Posted by :<%=likedata.postedby %></p>
                <p class="post-date">Description:<%=likedata.description%></p>
              </div>
            </li>
          <% }); %>
        </ul>
    </div>
  </body>
</html>
