    <style>

/* Overall layout and styling */

body {
  font-family: Arial, sans-serif;
  margin: 0;
  background-color: #6a3b75;
  padding-top: 1%;
  padding-bottom: 1%;
}

.schedule-planner {
  max-width: 1000px;
  margin: 0 auto;
  padding: 30px;
  background-color: #fec9ff9e;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.683);
  border-radius: 80px;
}

h1 {
  font-size: 36px;
  text-align: center;
  margin-bottom: 30px;
  color: #333;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.1);
}

.day {
  margin-bottom: 60px;
}

h2 {
  font-size: 24px;
  color: #333;
  margin-bottom: 30px;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.1);
}

ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

li {
  padding: 15px 20px;
  margin: 20px;
  background-color: #f9f9f9;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  transform: perspective(1px) translateY(0);
  transition: transform 0.3s;
}

li::before {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 10px;
  background-color: var(--primary-color);
  border-radius: 5px 0 0 5px;
}

li:nth-child(1)::before {
  background-color: var(--primary-color);
}

li:last-child {
  margin-bottom: 0;
}

li .time {
  font-size: 20px;
  font-weight: bold;
  color: #333;
}

li .title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

li .description {
  font-size: 16px;
  color: #666;
}

li:hover {
  transform: perspective(1px) translateY(-5px);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}





